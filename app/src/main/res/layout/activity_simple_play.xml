<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- 영상 화면 (전체 화면) -->
    <SurfaceView
        android:id="@+id/surface_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.geniecaddie.detectball.view.PointSurfaceView
        android:id="@+id/sv_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 가이드라인 오버레이 (전체 화면) -->
    <com.geniecaddie.detectball.view.GuideSurfaceView
        android:id="@+id/guide_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <!-- 프레임 저장 토글 버튼 (지연 그리기 버튼 아래) -->
    <Button
        android:id="@+id/btn_save_frames_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="#80FFFFFF"
        android:minWidth="140dp"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:text="프레임저장: OFF"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 그리기 상태 정보 (프레임 저장 버튼 아래) -->
    <TextView
        android:id="@+id/tv_draw_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frame: -\n선: 0개\n색: -"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:minWidth="140dp"
        app:layout_constraintTop_toBottomOf="@id/btn_save_frames_toggle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 궤적 탐색 패널 (그리기 상태 정보 아래) -->
    <LinearLayout
        android:id="@+id/layout_trajectory_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#80FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_draw_status"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 탐색 모드 토글 버튼 -->
        <Button
            android:id="@+id/btn_trajectory_mode_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="궤적 탐색: OFF"
            android:minWidth="140dp"
            android:minHeight="40dp"
            android:textSize="14sp"
            android:background="#FFFFFF"
            android:textColor="@android:color/black" />

        <!-- 궤적 정보 표시 -->
        <TextView
            android:id="@+id/tv_trajectory_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frame: -\n궤적: -/-\n길이: -\n색상: -"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#CCFFFFFF"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <!-- 탐색 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btn_trajectory_prev"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="◀"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_trajectory_next"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="▶"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="@android:color/black" />

        </LinearLayout>


    </LinearLayout>
    <!-- 최대 분석 시간 조절 패널 -->
    <LinearLayout
        android:id="@+id/layout_analysis_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#30FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_trajectory_navigation"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="분석 시간"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_analysis_time_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

            <TextView
                android:id="@+id/tv_analysis_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="4.5초"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btn_analysis_time_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- 최소 연속 궤적 수 조절 패널 -->
    <LinearLayout
        android:id="@+id/layout_min_trajectories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#30FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_analysis_time"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최소 연속 궤적"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_min_traj_count_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

            <TextView
                android:id="@+id/tv_min_traj_count"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btn_min_traj_count_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- 캡처 주기 조절 패널 (좌상단) -->
    <LinearLayout
        android:id="@+id/layout_capture_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#30FFFFFF"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캡처 주기"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_interval_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

            <TextView
                android:id="@+id/tv_capture_interval"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.10초"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btn_interval_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 지연 시간 조절 패널 (캡처 주기 패널 아래) -->


    <!-- 재생 시간 표시 (현재 분석 중인 프레임 정보 아래, 목록 버튼 위) -->
    <TextView
        android:id="@+id/tv_playback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="#80FFFFFF"
        android:padding="8dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btn_list"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 목록 버튼 (좌하단) -->
    <Button
        android:id="@+id/btn_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목록"
        android:minWidth="80dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:background="#80FFFFFF"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 가이드라인 버튼 (목록 버튼 옆) -->
    <Button
        android:id="@+id/btnToggleGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가이드라인"
        android:minWidth="100dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="#80FFFFFF"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_list" />

    <!-- X축 그리드 크기 패널 (가이드라인 버튼 옆) -->
    <LinearLayout
        android:id="@+id/grid_size_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="#30FFFFFF"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnToggleGuide">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x축 그리드 크기"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_grid_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

            <TextView
                android:id="@+id/tv_grid_size"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btn_grid_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Y축 그리드 크기 패널 (X축 그리드 패널 옆) -->
    <LinearLayout
        android:id="@+id/grid_horizontal_size_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="#30FFFFFF"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/grid_size_panel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y축 그리드 크기"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_grid_horizontal_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

            <TextView
                android:id="@+id/tv_grid_horizontal_size"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btn_grid_horizontal_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80FFFFFF"
                android:textColor="@android:color/black"
                android:padding="0dp" />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_delayed_draw_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지연그리기: OFF"
        android:minWidth="140dp"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="#80FFFFFF"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/grid_horizontal_size_panel" />

    <LinearLayout
        android:id="@+id/layout_draw_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#30FFFFFF"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_delayed_draw_toggle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="지연 시간"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_draw_delay_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#80FFFFFF"
                android:padding="0dp"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_draw_delay"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="1.0초"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_draw_delay_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#80FFFFFF"
                android:padding="0dp"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/object_size_panel"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#30FFFFFF"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_capture_interval">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="객체 크기             "
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- 최소값 설정 라인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="최소:"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_obj_size_min_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/spinner_obj_size_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:popupBackground="#C0C0C0"
                />
        </LinearLayout>

        <!-- 최대값 설정 라인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="최대:"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_obj_size_max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="20"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_obj_size_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:popupBackground="#C0C0C0"
                />
        </LinearLayout>

    </LinearLayout>

    <!-- 궤적 필터링 임계값 패널 (객체 크기 패널 아래) -->
    <LinearLayout
        android:id="@+id/trajectory_filter_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#30FFFFFF"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/object_size_panel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="궤적 필터링 임계값"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- X 임계값 설정 라인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="F(x):"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_trajectory_x_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="100"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_trajectory_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:popupBackground="#C0C0C0" />
        </LinearLayout>

        <!-- Y 임계값 설정 라인 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="F(y):"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_trajectory_y_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="50"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_trajectory_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:popupBackground="#C0C0C0" />
        </LinearLayout>

    </LinearLayout>

    <!-- 확정공 목록 (우측 상단, UI 숨김 상태에서만 표시) -->
    <ScrollView
        android:id="@+id/scroll_confirmed_balls"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="#30FFFFFF"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideInset"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layout_confirmed_balls_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- 확정공 목록이 동적으로 추가됩니다 -->

        </LinearLayout>
    </ScrollView>

    <!-- 정지 버튼 (우하단) -->
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정지"
        android:minWidth="80dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:background="#80FFFFFF"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_toggle_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI 숨김"
        android:minWidth="100dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:background="#50FFFFFF"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_play" />

    <!-- 현재 분석 중인 프레임 정보 표시 (재생 시간 위) -->
    <TextView
        android:id="@+id/tv_current_processing_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:background="#80FFFFFF"
        android:padding="8dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_playback_time"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 직전 영상 이름 표시 (재생 버튼 위) -->
    <TextView
        android:id="@+id/tv_last_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#80FFFFFF"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="8dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/btn_play"
        app:layout_constraintEnd_toEndOf="@+id/btn_stop" />

    <!-- 재생/일시정지 버튼 (정지 버튼 좌측) -->
    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재생"
        android:minWidth="100dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:background="#80FFFFFF"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_stop" />

</androidx.constraintlayout.widget.ConstraintLayout>